package routes

import (
	"{{.PackagePath}}/config"
	"{{.PackagePath}}/pkg"

	"github.com/gofiber/fiber/v2"
)

func RunRoutes(app *fiber.App, pgx *pkg.Pgx, conf config.Config) {
	// Define your routes and handlers here
	app.Get("/", func(c *fiber.Ctx) error {
		return c.SendString("Hello, World!")
	})

	// Register routes here
	NewAuthRouter(app, pgx, conf.JwtCredential, conf)
	NewProfileRouter(app, pgx, conf.Redis, conf.JwtCredential)
	NewRoleRouter(app, pgx, conf.Redis, conf.JwtCredential)
	NewUserRouter(app, pgx, conf.Redis, conf.JwtCredential)
}
